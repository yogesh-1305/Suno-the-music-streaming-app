<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="-180"
                android:startColor="@color/com_facebook_button_send_background_color"
                android:endColor="@color/com_facebook_button_send_background_color" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="180"
                android:startColor="@color/com_facebook_blue"
                android:endColor="@color/com_facebook_blue" />
        </shape>
    </item>
</selector>